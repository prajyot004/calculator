<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    >




    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/aqua"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:singleLine="true"
        />


    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/input"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@color/aqua"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/l1"
        android:layout_below="@id/output"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/swap"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/aqua"
            android:text="switch"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dateCon"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/swap"
            android:background="@color/aqua"
            android:text="Coverter"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/cancel"
            android:foreground="@drawable/backspace3"
            android:padding="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_toRightOf="@id/dateCon"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/l1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/clear"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@color/aqua"
            android:text="AC"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"
            />

        <Button
            android:id="@+id/opbracket"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/clear"
            android:background="@color/aqua"
            android:text="("
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/clbracket"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/opbracket"
            android:background="@color/aqua"
            android:text=")"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>


        <Button
            android:id="@+id/mod"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/opbracket"
            android:background="@color/aqua"
            android:text="%"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/divide"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/opbracket"
            android:background="@color/aqua"
            android:text="/"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/l2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/no7"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="7"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/no8"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/clear"
            android:background="@color/white"
            android:text="8"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/no9"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/opbracket"
            android:background="@color/white"
            android:text="9"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>


        <Button
            android:id="@+id/multiply"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/opbracket"
            android:background="@color/aqua"
            android:text="x"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/l3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/no4"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/no5"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/clear"
            android:background="@color/white"
            android:text="5"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/no6"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/opbracket"
            android:background="@color/white"
            android:text="6"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>


        <Button
            android:id="@+id/subtraction"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/opbracket"
            android:background="@color/aqua"
            android:text="-"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/l5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/l4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/no1"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/no2"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/clear"
            android:background="@color/white"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/no3"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/opbracket"
            android:background="@color/white"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>


        <Button
            android:id="@+id/addition"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/opbracket"
            android:background="@color/aqua"
            android:text="+"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/l6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/l5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/priority"
            android:layout_width="83dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            />


        <Button
            android:id="@+id/Zero"
            android:layout_width="83dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/dot"
            android:layout_width="83dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/equalto"
            android:layout_width="83dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:background="@color/royalblue"
            android:text="="
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textAlignment="center"
            />






    </LinearLayout>
        
</RelativeLayout>